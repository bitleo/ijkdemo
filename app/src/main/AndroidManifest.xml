<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    package="top.bitleo.ijkdemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:name="top.bitleo.ijkdemo.ClientApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name="top.bitleo.ijkdemo.ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="top.bitleo.ijkdemo.ui.activity.LoginActivity" android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name="top.bitleo.ijkdemo.ui.activity.MainActivity" android:label="@string/app_name" android:launchMode="singleTask"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>